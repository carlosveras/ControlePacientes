
@{
    ViewBag.Title = "Crear";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="#">Mantenedor</a></li>
        <li class="breadcrumb-item active" aria-current="page">Forma Pagamento</li>
    </ol>
</nav>
<div class="row">
    <div class="col-sm-12">
        <div class="card border-info">
            <div class="card-header bg-info text-white">
                Lista Formas de Pagamento
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-sm-4">
                        <button type="button" class="btn btn-sm btn-success" onclick="abrirPopUpForm(null)"><i class="fa fa-plus" aria-hidden="true"></i>Nova</button>
                    </div>
                </div>
                <hr />
                <div class="row mt-3">
                    <div class="col-sm-12">
                        <table id="tbdata" class="table table-striped table-bordered nowrap compact" style="width:100%">
                            <thead>
                                <tr>
                                    <th>Descricao</th>
                                    <th>Nr Parcelas</th>
                                    <th>Estado</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody></tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modal -->
<div class="modal fade" id="FormModal" tabindex="-1" role="dialog" data-backdrop="static" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header btn-info text-white">
                <h5 class="modal-title" id="exampleModalLabel">Forma de Pagamento</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="form">
                    <input id="txtid" name="IdRol" value="0" type="hidden" />
                    <div class="form-group">
                        <label for="txtDescricao" class="col-form-label">Descricao: <span class="error"></span></label>
                        <input type="text" class="form-control form-control-sm model" id="txtDescricao" name="Descricao">
                    </div>
                    @*<div class="form-group">
            <label for="txtQtParcelas" class="col-form-label">Nr Parcelas: <span class="error"></span></label>
            <input type="text" class="form-control form-control-sm model" id="txtQtParcelas" name="Parcelas">
        </div>*@

                <div class="form-group">
                    <label for="cboquantasparcelas" class="col-form-label">Nr Parcelas:</label>
                    <select class="form-control form-control-sm model" id="cboquantasparcelas">
                        <option value="1">1</option>
                        <option value="2">2</option>
                        <option value="3">3</option>
                        <option value="4">4</option>
                        <option value="5">5</option>
                        <option value="6">6</option>
                        <option value="7">7</option>
                        <option value="8">8</option>
                        <option value="9">9</option>
                        <option value="10">10</option>
                    </select>
                </div>

                    <div class="form-group">
                        <label for="cboEstado" class="col-form-label">Ativo:</label>
                        <select class="form-control form-control-sm model" id="cboEstado" name="Ativo">
                            <option value="1">Ativo</option>
                            <option value="0">Inativo</option>
                        </select>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-sm btn-danger" data-dismiss="modal">Cancelar</button>
                <button type="button" class="btn btn-sm btn-primary" onclick="Guardar()">Salvar</button>
            </div>
        </div>
    </div>
</div>

@section scripts{
    
    <script src="@Url.Content("~/Scripts/Views/FormaPagamento_Crear.js")" type="text/javascript"></script>
}

